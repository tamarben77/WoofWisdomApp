<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dogbreedwallpaper"
    tools:context=".dogBreedsInfoActivity">

    <AutoCompleteTextView
        android:id="@+id/breedAutoComplete"
        android:layout_width="223dp"
        android:layout_height="0dp"
        android:layout_marginBottom="313dp"
        android:fontFamily="sans-serif-medium"
        android:text="breed type..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dogBreedTitle" />

    <EditText
        android:id="@+id/dogBreedTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="167dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:inputType="textMultiLine|textPersonName"
        android:outlineProvider="background"
        android:singleLine="false"
        android:text="Discover dog breeds with Woof Wisdom!"
        android:textSize="20sp"
        app:guidelineUseRtl="false"
        app:layout_constraintBottom_toTopOf="@+id/breedAutoComplete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>