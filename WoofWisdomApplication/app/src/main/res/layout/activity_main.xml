<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/mainLogo"
        android:layout_width="394dp"
        android:layout_height="311dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="409dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageButton
        android:id="@+id/mapsBtn"
        android:layout_width="80dp"
        android:layout_height="74dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="322dp"
        android:adjustViewBounds="false"
        android:background="?selectableItemBackgroundBorderless"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainLogo"
        app:layout_constraintVertical_bias="0.291"
        app:srcCompat="@drawable/dog_find_logo" />

    <TextView
        android:id="@+id/nearVet"
        android:layout_width="78dp"
        android:layout_height="46dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="278dp"
        android:text="Find Nearest Vet"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapsBtn"
        app:layout_constraintVertical_bias="0.241" />

    <ImageButton
        android:id="@+id/vaccinationsBtn"
        android:layout_width="112dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="316dp"
        android:background="?selectableItemBackgroundBorderless"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mapsBtn"
        app:layout_constraintTop_toBottomOf="@+id/mainLogo"
        app:srcCompat="@drawable/dog_vaccination_logo" />

    <TextView
        android:id="@+id/vaccinationRecord"
        android:layout_width="95dp"
        android:layout_height="59dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="276dp"
        android:text="Vaccination Record"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/nearVet"
        app:layout_constraintTop_toBottomOf="@+id/vaccinationsBtn"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/cameraAnalyzer"
        android:layout_width="82dp"
        android:layout_height="88dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="322dp"
        android:background="?selectableItemBackgroundBorderless"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vaccinationsBtn"
        app:layout_constraintTop_toBottomOf="@+id/mainLogo"
        app:srcCompat="@drawable/dog_camera_logo" />

    <TextView
        android:id="@+id/stoolPukeAnalyzer"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="259dp"
        android:text="Stool and Puke analyzer"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/vaccinationRecord"
        app:layout_constraintTop_toBottomOf="@+id/cameraAnalyzer" />

    <ImageButton
        android:id="@+id/suspiciousFoodBtn"
        android:layout_width="105dp"
        android:layout_height="94dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="316dp"
        android:layout_marginBottom="187dp"
        android:background="?selectableItemBackgroundBorderless"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nearVet"
        app:layout_constraintVertical_bias="0.431"
        app:srcCompat="@drawable/sick_dog_logo" />

    <TextView
        android:id="@+id/dangerousFood"
        android:layout_width="90dp"
        android:layout_height="53dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="292dp"
        android:layout_marginBottom="110dp"
        android:text="Suspicious Food Analyzer"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suspiciousFoodBtn" />

    <ImageButton
        android:id="@+id/forumsBtn"
        android:layout_width="113dp"
        android:layout_height="105dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="182dp"
        android:background="?selectableItemBackgroundBorderless"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toEndOf="@+id/dangerousFood"
        app:layout_constraintTop_toBottomOf="@+id/vaccinationRecord"
        app:layout_constraintVertical_bias="0.513"
        app:srcCompat="@drawable/dog_forum_logo" />

    <TextView
        android:id="@+id/forums"
        android:layout_width="118dp"
        android:layout_height="65dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="120dp"
        android:text="Forums With Proffessionals"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toEndOf="@+id/dangerousFood"
        app:layout_constraintTop_toBottomOf="@+id/forumsBtn"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/dogBreedsInfoBtn"
        android:layout_width="83dp"
        android:layout_height="94dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="170dp"
        android:background="?selectableItemBackgroundBorderless"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/forumsBtn"
        app:layout_constraintTop_toBottomOf="@+id/stoolPukeAnalyzer"
        app:srcCompat="@drawable/info_dog_logo" />

    <TextView
        android:id="@+id/dogBreedsInfo"
        android:layout_width="74dp"
        android:layout_height="45dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="120dp"
        android:text="Dog Breeds Information"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/forums"
        app:layout_constraintTop_toBottomOf="@+id/dogBreedsInfoBtn" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="199dp"
        android:layout_height="35dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="15dp"
        android:background="#591F1F"
        android:backgroundTint="#591F1F"
        android:backgroundTintMode="add"
        android:drawableTint="#591F1F"
        android:foregroundTint="#591F1F"
        android:text="Login"
        app:iconTint="#591F1F"
        app:backgroundTint="#AA3C64"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forums"
        app:rippleColor="#591F1F"
        app:strokeColor="#591F1F" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="193dp"
        android:layout_height="17dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="11dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>